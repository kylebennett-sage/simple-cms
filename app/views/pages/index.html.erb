<% @page_title = "Pages" %>

<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>
<%= link_to("<< Back to Subjects", subjects_path, :class => 'back-link') %>

<div class="pages index">
  <h2>Pages</h2>

  <%= link_to("Add New Page", new_subject_page_path(:subject_id => @subject.id), :class => 'action new') %>

  <div><%= pluralize(@pages.size, 'page') %> found</div>

  <table class="listing" summary="Subject list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Subject</th>
      <th>Page</th>
      <th>Permalink</th>
      <th>Visible</th>
      <th>Sections</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= page.position %></td>
        <td><%= page.subject.name if page.subject %></td>
        <td><%= page.name %></td>
        <td><%= page.permalink %></td>
        <td class="center"><%= status_tag(page.visible) %></td>
        <td class="center"><%= page.sections.size %></td>
        <td class="actions">
          <%= link_to("View Sections", { :controller => 'sections', :page_id => page.id }, :class => 'action show') %>
          <%= link_to("Show", subject_page_path(page.id, subject_id: @subject.id), :class => 'action show') %>
          <%= link_to("Edit", edit_subject_page_path(page.id, :subject_id => @subject.id), :class => 'action edit') %>
          <%= link_to("Delete", delete_subject_page_path(page.id, :subject_id => @subject.id), :class => 'action delete') %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

