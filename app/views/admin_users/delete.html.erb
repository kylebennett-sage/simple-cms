<% @page_title = "Delete '#{@user.username}'" %>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="users delete">
  <h2>Delete User</h2>

  <%= form_for(:admin_user, :url => admin_user_path(@user.id), :html => { :method => :delete }) do |f| %>

    <p>Are you sure you want to permanently delete this User?</p>

    <p class="reference-name"><%= @user.name %> - <%= @user.username %></p>

    <div class="form-buttons">
      <%= submit_tag("Delete User") %>
    </div>

  <% end %>
</div>