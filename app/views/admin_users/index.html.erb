<% @page_title = "Admin Users" %>

<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>


<div class="admin_users index">
  <h2>Pages</h2>

  <%= link_to("Add New Admin User", new_admin_user_path, :class => 'action new') %>

  <div><%= pluralize(@users.size, 'user') %> found</div>

  <table class="listing" summary="Admin Users list">
    <tr class="header">
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= mail_to(user.email) %></td>
        <td class="actions">
          <%= link_to("Edit", edit_admin_user_path(user.id), :class => 'action edit') %>
          <%= link_to("Delete", delete_admin_user_path(user.id), :class => 'action delete') %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

